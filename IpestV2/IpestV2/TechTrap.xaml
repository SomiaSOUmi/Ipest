<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IpestV2.TechTrap">
    <ContentPage.Content>
        <Grid BackgroundColor="White">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Button Grid.Row ="1" Text="Report Issue" x:Name="issue" Style="{StaticResource buttonStyle}" Clicked="Issue_Clicked" />
            <Button Grid.Row="2" Text="Maintain the Trap" x:Name="maintain" Style="{StaticResource buttonStyle}" Clicked="Maintain_Clicked"  />
            <Button Grid.Row="3" Text="Back" x:Name="back" Style="{StaticResource buttonStyle}" Clicked="Back_Clicked"  />

        </Grid>
    </ContentPage.Content>
</ContentPage>